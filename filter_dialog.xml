<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">



    <TextView
        android:id="@+id/review_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_opt"
        android:textColor="@color/app_sec_color"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold" />


    <RadioGroup
        android:id="@+id/radio_group_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="15dp">


        <RadioButton
            android:id="@+id/radio_ev_stations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_ev_stations"
            android:textColor="@color/app_sec_color"
            android:checked="false" />


        <RadioButton
            android:id="@+id/radio_fuel_stations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_fuel_stations"
            android:textColor="@color/app_sec_color" />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/app_sec_color"
        android:layout_marginBottom="8dp" />


    <TextView
        android:id="@+id/priceSeekTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="£ 0.00"
        android:textColor="@color/app_sec_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvMinPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min: £0.00"
            android:textColor="@color/app_sec_color" />

        <SeekBar
            android:id="@+id/seekBarPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="200"
            android:progressDrawable="@drawable/custom_seekbar_progress"
            android:thumb="@drawable/custom_seekbar_thumb" />

<!--        <SeekBar-->
<!--            android:id="@+id/seekBarPrice"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:max="200" /> &lt;!&ndash; Example: Max price is £2.00 &ndash;&gt;-->

        <TextView
            android:id="@+id/tvMaxPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max: £2.00"
            android:textColor="@color/app_sec_color" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Distance (km)"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/app_sec_color"
        android:layout_marginBottom="8dp" />


    <TextView
        android:id="@+id/distanceSeekTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 km"
        android:textColor="@color/app_sec_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvMinDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min: 0 km"
            android:textColor="@color/app_sec_color" />

        <SeekBar
            android:id="@+id/seekBarDistance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            android:progressDrawable="@drawable/custom_seekbar_progress"
            android:thumb="@drawable/custom_seekbar_thumb" />
            />

        <TextView
            android:id="@+id/tvMaxDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max: 100 km"
            android:textColor="@color/app_sec_color" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClearFilters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/app_sec_color"
            android:text="@string/clear_filter"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnApplyFilters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/app_sec_color"
            android:text="@string/apply_filter"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>











