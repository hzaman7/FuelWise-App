<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_forget_pass_rl"
    android:layout_width="match_parent"
    android:padding="25dp"
    tools:context=".ForgetActivity"
    android:background="@color/white"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/app_logo" />

    <EditText
        android:id="@+id/act_forget_pass_email_edt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/logo_iv"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/app_sec_color"
        android:textColorHint="@color/hint_color"
        android:textSize="18sp" />

    <Button
        android:id="@+id/act_forget_pass_sent_btn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/app_sec_color"
        android:layout_below="@+id/act_forget_pass_email_edt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/recover_pass"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/back_to_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/act_forget_pass_sent_btn"
        android:layout_marginTop="25dp"
        android:text="@string/back_to_login"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/app_primary_color"/>

</RelativeLayout>